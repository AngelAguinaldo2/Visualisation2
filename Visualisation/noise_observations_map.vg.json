{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Noise Observations in Victoria",
    "projection": {"type": "equalEarth"},

    "layer": [
        {
            "data": {
                "url":
                "https://raw.githubusercontent.com/AngelAguinaldo2/Visualisation2/main/Maps/mapVIC.json",

                "format": {"type": "topojson", "feature": "MB_2016_VIC"}
            },
            
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke":
            "white"}
        },
    
        {
            "data": {
                "url":
                "https://raw.githubusercontent.com/AngelAguinaldo2/Visualisation2/main/Maps/noise-observations.csv"
            },

            "mark": {"type": "circle", "tooltip": {"content": "data"}},

            "encoding": {
                "longitude": {"field": "longitude", "type":
                "quantitative"},
                "latitude": {"field": "latitude", "type":
                "quantitative"},

                "size": {
                    "field": "sound_pressure_level_average",
                    "type": "quantitative",
                    "title": "Average Sound Pressure Observed",
                    "scale": {"domain": [-50, 100]}
                },
                "color": {
                    "field": "sound_pressure_level_average",
                    "type": "quantitative",
                    "title": "Sound Levels",
                    "scale": {"scheme": "reds"}
                }
            }
        }
    ]
}